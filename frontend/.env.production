# 🚀 本番環境設定
NODE_ENV=production
VITE_APP_ENV=production

# ✅ 外部送信機能有効化
VITE_ENABLE_LINE_MESSAGING=true
VITE_ENABLE_INSTAGRAM_DM=true
VITE_ENABLE_SMS_SENDING=true
VITE_ENABLE_EMAIL_BULK_SEND=true
VITE_ENABLE_EXTERNAL_INTEGRATIONS=true

# ✅ 警告表示無効化
VITE_SHOW_PRODUCTION_WARNINGS=false
VITE_RESTRICT_EXTERNAL_APIS=false

# 🚀 本番用設定 (GitHub Actions will override VITE_API_BASE_URL)
VITE_API_BASE_URL=https://salon-backend-default.a.run.app/api/v1
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=error

# 💳 決済・課金機能有効化
VITE_ENABLE_PAYMENTS=true
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_placeholder

# 📊 分析・レポート機能有効化
VITE_ENABLE_ANALYTICS_EXPORT=true
VITE_ENABLE_PDF_REPORTS=true

# 🔐 セキュリティ設定
VITE_CSRF_PROTECTION=true
VITE_RATE_LIMITING=true

# 📱 プッシュ通知有効化
VITE_ENABLE_PUSH_NOTIFICATIONS=true

# 🎯 プラン機能
VITE_PLAN_RESTRICTIONS_ENABLED=true
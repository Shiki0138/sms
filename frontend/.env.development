# 🔧 開発環境設定
NODE_ENV=development
VITE_APP_ENV=development

# 🧪 テストフェーズ設定（開発環境では通常無効）
VITE_TESTING_PHASE=false

# 🚫 外部送信機能制限フラグ
VITE_ENABLE_LINE_MESSAGING=false
VITE_ENABLE_INSTAGRAM_DM=false
VITE_ENABLE_SMS_SENDING=false
VITE_ENABLE_EMAIL_BULK_SEND=false
VITE_ENABLE_EXTERNAL_INTEGRATIONS=false

# ⚠️ 警告表示設定
VITE_SHOW_PRODUCTION_WARNINGS=true
VITE_RESTRICT_EXTERNAL_APIS=true

# 🔧 開発用設定
VITE_API_BASE_URL=http://localhost:3001
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL=debug

# 💳 決済・課金機能（開発環境では無効）
VITE_ENABLE_PAYMENTS=false
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_demo_key

# 📊 分析・レポート機能
VITE_ENABLE_ANALYTICS_EXPORT=false
VITE_ENABLE_PDF_REPORTS=false

# 🔐 セキュリティ設定
VITE_CSRF_PROTECTION=true
VITE_RATE_LIMITING=true

# 📱 プッシュ通知（開発環境では無効）
VITE_ENABLE_PUSH_NOTIFICATIONS=false
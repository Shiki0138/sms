  validFrom       DateTime?
  validTo         DateTime?
  
  // 対象設定
  targetStaffIds  String?  // JSON配列: 対象スタッフID
  targetRoles     String?  // JSON配列: 対象ロール
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // Relations
  tenant          Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  achievements    StaffAchievement[]
  
  @@index([tenantId, isActive])
  @@index([type, isActive])
  @@map("incentive_rules")
}

// スタッフ達成記録
model StaffAchievement {
  id              String   @id @default(cuid())
  staffId         String
  ruleId          String
  tenantId        String
  
  // 達成詳細
  achievedAt      DateTime
  achievedValue   Float    // 達成した値
  rewardAmount    Float    // 獲得報酬額
  status          String   @default("EARNED") // EARNED, PAID, CANCELLED
  
  // メタデータ
  metadata        String?  // JSON: 達成詳細データ
  notes           String?
  
  createdAt       DateTime @default(now())
  
  // Relations
  staff           Staff    @relation("StaffAchievement", fields: [staffId], references: [id], onDelete: Cascade)
  rule            IncentiveRule @relation(fields: [ruleId], references: [id], onDelete: Cascade)
  tenant          Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  
  @@index([staffId, achievedAt])
  @@index([tenantId, achievedAt])
  @@map("staff_achievements")
}

// プレミアム経営戦略ダッシュボード
model BusinessMetrics {
  id              String   @id @default(cuid())
  tenantId        String
  metricDate      DateTime
  
  // 売上指標
  dailyRevenue    Float    @default(0)
  monthlyRevenue  Float    @default(0)
  yearlyRevenue   Float    @default(0)
  targetRevenue   Float?   // 目標売上
  
  // 顧客指標
  newCustomers    Int      @default(0)
  repeatCustomers Int      @default(0)
  lostCustomers   Int      @default(0)
  avgCustomerValue Float   @default(0)
  customerRetentionRate Float @default(0)
  
  // 効率指標
  avgServiceTime  Float    @default(0) // 平均施術時間
  chairUtilization Float   @default(0) // 席稼働率
  staffProductivity Float  @default(0) // スタッフ生産性
  
  // 在庫・コスト
  inventoryCost   Float    @default(0)
  laborCost       Float    @default(0)
  overheadCost    Float    @default(0)
  profitMargin    Float    @default(0)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // Relations
  tenant          Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  
  @@unique([tenantId, metricDate])
  @@index([tenantId, metricDate])
  @@map("business_metrics")
}

// 競合分析データ
model CompetitorAnalysis {
  id              String   @id @default(cuid())
  tenantId        String
  competitorName  String
  
  // 位置情報
  distance        Float    // km
  location        String
  
  // 価格比較
  avgMenuPrice    Float
  pricePosition   String   // LOWER, SIMILAR, HIGHER
  
  // サービス分析
  services        String   // JSON: 提供サービスリスト
  uniqueServices  String?  // JSON: 独自サービス
  
  // 評価
  onlineRating    Float?
  reviewCount     Int?
  
  // 分析データ
  strengthPoints  String?  // JSON: 強み
  weaknessPoints  String?  // JSON: 弱み
  threats         String?  // JSON: 脅威
  opportunities   String?  // JSON: 機会
  
  lastAnalyzedAt  DateTime
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // Relations
  tenant          Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  
  @@index([tenantId])
  @@map("competitor_analysis")

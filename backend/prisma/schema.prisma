// 経営戦略アクションプラン
model StrategicAction {
  id              String   @id @default(cuid())
  tenantId        String
  
  // アクション詳細
  title           String
  description     String
  category        String   // REVENUE, COST, CUSTOMER, OPERATION, MARKETING
  priority        String   // CRITICAL, HIGH, MEDIUM, LOW
  
  // 目標と指標
  targetMetric    String   // 影響する指標
  targetValue     Float    // 目標値
  currentValue    Float?   // 現在値
  expectedImpact  Float    // 期待される影響（%）
  
  // 実行計画
  assignedTo      String?  // スタッフIDまたはロール
  startDate       DateTime
  dueDate         DateTime
  status          String   @default("PLANNED") // PLANNED, IN_PROGRESS, COMPLETED, CANCELLED
  
  // 結果測定
  actualImpact    Float?   // 実際の影響（%）
  completedAt     DateTime?
  notes           String?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // Relations
  tenant          Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  insights        InsightActionLink[]
  
  @@index([tenantId, status])
  @@index([tenantId, priority])
  @@map("strategic_actions")
}

// AI経営インサイト
model BusinessInsight {
  id              String   @id @default(cuid())
  tenantId        String
  
  // インサイト詳細
  type            String   // TREND, ANOMALY, PREDICTION, RECOMMENDATION
  category        String   // REVENUE, CUSTOMER, OPERATION, RISK
  title           String
  description     String
  
  // 重要度と確信度
  importance      String   // CRITICAL, HIGH, MEDIUM, LOW
  confidence      Float    // 0.0-1.0
  
  // 分析データ
  analysisData    String   // JSON: 詳細分析データ
  evidence        String?  // JSON: 根拠データ
  
  // 予測情報（該当する場合）
  predictedValue  Float?
  predictedDate   DateTime?
  
  // アクション提案
  suggestedActions String? // JSON: 提案アクション
  
  // 有効期限
  validUntil      DateTime
  dismissed       Boolean  @default(false)
  
  createdAt       DateTime @default(now())
  
  // Relations
  tenant          Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  linkedActions   InsightActionLink[]
  
  @@index([tenantId, type, dismissed])
  @@index([tenantId, importance])
  @@map("business_insights")
}

// インサイトとアクションの関連
model InsightActionLink {
  insightId       String
  actionId        String
  
  insight         BusinessInsight @relation(fields: [insightId], references: [id], onDelete: Cascade)
  action          StrategicAction @relation(fields: [actionId], references: [id], onDelete: Cascade)
  
  @@id([insightId, actionId])
  @@map("insight_action_links")
}

// 経営目標設定
model BusinessGoal {
  id              String   @id @default(cuid())
  tenantId        String
  
  // 目標詳細
  name            String
  description     String?
  metric          String   // revenue, customer_count, retention_rate, etc.
  targetValue     Float
  currentValue    Float    @default(0)
  
  // 期間
  period          String   // MONTHLY, QUARTERLY, YEARLY
  startDate       DateTime
  endDate         DateTime
  
  // 進捗
  progress        Float    @default(0) // 0-100%
  status          String   @default("ACTIVE") // ACTIVE, ACHIEVED, FAILED, CANCELLED
  
  // 戦略
  strategies      String?  // JSON: 達成戦略
  milestones      String?  // JSON: マイルストーン
  
  achievedAt      DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // Relations
  tenant          Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  
  @@index([tenantId, period, status])
  @@map("business_goals")
}


  aiAnalysis      String?  // JSON: AI詳細分析
  riskAssessment  String?  // JSON: リスク評価
  opportunities   String?  // JSON: 成長機会
  
  // 配信情報
  recipients      String?  // JSON: 配信先リスト
  sentAt          DateTime?
  
  createdAt       DateTime @default(now())
  

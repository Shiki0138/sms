{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "exactOptionalPropertyTypes": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "types": ["node", "express"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "src/**/*.d.ts"],
  "files": ["src/index.d.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "src/services/securityService.ts",
    "src/services/broadcastService.ts",
    "src/services/emotional-database-service.ts",
    "src/test/**/*",
    "src/utils/security.ts",  
    "src/controllers/emotionalAnalyticsController.ts",
    "src/controllers/magicalExternalApiController.ts",
    "src/routes/emotional-analytics.ts",
    "src/routes/magical-external-apis.ts",
    "src/services/emotional-ai-analytics.ts",
    "src/services/magicalExternalApiService.ts",
    "src/services/paymentService.ts",
    "src/controllers/supportBeauticianController.ts",
    "src/controllers/salaryDashboardController.ts",
    "src/services/businessStrategyService.ts",
    "src/services/contactFormService.ts",
    "src/services/databaseOptimizationService.ts",
    "src/services/monitoringService.ts",
    "src/services/businessAnalyticsService.ts",
    "src/scripts/loadDemoData.ts",
    "src/middleware/featureFlag.ts",
    "src/data/**/*",
    "../frontend/**/*"
  ]
}
